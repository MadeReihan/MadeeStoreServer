<table id="example2" class="table table-bordered table-hover">
    <thead>
    <tr>
      <th>No</th>
      <th>Tipe Pembayaran</th>
      <th>Banks</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
      <% for(let i = 0; i<payment.length; i++){ %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= payment[i].type %></td>
          <td>
              <% payment[i].banks.forEach(banks =>{ %>
                <span class="badge badge-warning"><%= banks.name%> - <%=banks.bankName%> (<%=banks.noRekening%>)</span>
              <%})%>
          </td>

          <td>
              <% if(payment[i].status === 'Y'){ %>
                <span class="badge badge-success">Active</span>
              <%}else{ %>
                <span class="badge badge-info">Non Active</span>
              <%}%>
          </td>
          
          <td>
            <a href="/payment/edit/<%= payment[i]._id %>" class="btn btn-warning"><i class="fas fa-pencil-alt"></i>Ubah</a>
            <form action="/payment/delete/<%=payment[i]._id %>?_method=DELETE" method="POST" style="display: inline-block;">
              <button class="btn btn-danger"><i class="fas fa-trash"></i>Hapus</button>
            </form>
          </td>
        </tr>
      <%} %>
    </tbody>
    <tfoot>
    <tr>
        <th>No</th>
        <th>Tipe Pembayaran</th>
        <th>Banks</th>
        <th>Status</th>
        <th>Action</th>
    </tr>
    </tfoot>
  </table>