<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Bank</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item "><a href="/bank">Bank</a></li>
              <li class="breadcrumb-item active">Ubah</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">form ubah bank</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/bank/edit/<%=bank._id%>?_method=PUT" method="post">
                  <div class="card-body">
                    
                    <div class="form-group">
                      <label for="name">Nama Pemilik</label>
                      <input type="text" value="<%= bank.name%>" class="form-control" id="name" name="name" placeholder="masukkan nama pemilik" required>
                    </div>

                    
                    <div class="form-group">
                        <label>Nama Bank</label>
                        <select class="form-control select2" style="width: 100%;" name="namaBank" required>
                            <option selected="selected">Pilih Bank</option>
                            <option value="BCA"
                            <%if(bank.namaBank === 'BCA') {%>
                            selected
                            <%}%>
                            >
                            BCA</option>
                            <option value="Mandiri"<%if(bank.namaBank === 'Mandiri') {%>
                            selected
                            <%}%>
                            >Mandiri</option>
                            <option value="BNI" <%if(bank.namaBank === 'BNI') {%>
                            selected
                            <%}%>
                            >BNI</option>
                            <option value="BRI" <%if(bank.namaBank === 'BRI') {%>
                            selected
                            <%}%>
                            >BRI</option>
                        </select>
                    </div>




                    <div class="form-group">
                      <label for="nomorRekening">Nomor Rekening</label>
                      <input type="number" value="<%= bank.nomorRekening%>" class="form-control" id="nomorRekening" name="nomorRekening" placeholder="masukkan nomor rekening" required>
                    </div>

                  <!-- /.card-body -->
  
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Simpan</button>
                  </div>
                </form>
              </div>
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>